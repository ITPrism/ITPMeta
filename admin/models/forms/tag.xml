<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	   <field 
            name="title" 
            type="text" 
            size="70"
            class="textinput" 
            label="COM_ITPMETA_TITLE" 
        />
        
        <field 
           name="url_id" 
           type="hidden" 
           default="0" 
        />
        
        <field 
            name="content" type="textarea" class="textinput"
            rows="5"
            label="COM_ITPMETA_CONTENT"
        />
            
        <field 
            name="tag" type="textarea" 
            rows="5"
            label="COM_ITPMETA_TAG" 
            filter="raw"
        />
        
        <field 
            name="output" type="textarea" class="textinput"
            rows="5"
            label="COM_ITPMETA_OUTPUT" 
            required="true"
            filter="raw"
        />
        
        <field 
           name="tag_id" 
           type="text" 
           default="0" 
           label="JGLOBAL_FIELD_ID_LABEL" 
           description="JGLOBAL_FIELD_ID_DESC"
           readonly="true" 
           class="readonly"
        />
        
	</fieldset>
</form>