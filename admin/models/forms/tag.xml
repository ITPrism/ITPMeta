<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	
	   <field name="title" type="text" class="textinput input-xlarge"
	       label="COM_ITPMETA_TITLE" 
	       required="true" 
           size="70"
        />
        
        <field 
            name="type" 
            type="text" 
            label="COM_ITPMETA_TYPE" 
            readonly="true" 
            class="readonly"
        />
        
        <field
            name="published"
            type="list"
            label="JSTATUS"
            description="COM_ITPMETA_FIELD_STATE_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option
                value="1">JPUBLISHED</option>
            <option
                value="0">JUNPUBLISHED</option>
        </field>
        
        <field 
            name="content" type="textarea" class="textinput"
            label="COM_ITPMETA_CONTENT"
        />
            
        <field 
            name="tag" type="textarea" 
            label="COM_ITPMETA_TAG" 
            filter="raw"
        />
        
        <field 
            name="output" type="textarea" class="textinput"
            label="COM_ITPMETA_OUTPUT" 
            required="true"
            filter="raw"
        />
        
        <field 
           name="id" 
           type="text" 
           default="0" 
           label="JGLOBAL_FIELD_ID_LABEL" 
           description="JGLOBAL_FIELD_ID_DESC"
           readonly="true" 
           class="readonly"
        />
        
        <field name="url_id" type="hidden" default="0" />
        
        <field name="name" type="hidden" />
        
	</fieldset>
</form>